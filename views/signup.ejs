<%- include('head.ejs')-%>
<body>
  <div class="container">
    <div class="row">
      <div class="col s12 m6 offset-m3">
        <h1 class="center-align">Sign Up</h1>
        <% if (flashMessages.error && flashMessages.error.length > 0) { %>
        <div class="card-panel red">
          <% flashMessages.error.forEach(function(message) { %>
          <p class="white-text"><%= message %></p>
          <% }); %>
        </div>
        <% } %>
        <form action="/signup" method="POST">
          <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <input type="text" name="username" id="username" required />
            <label for="username">Username</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">password</i>
            <input type="password" name="password" id="password" required />
            <label for="password">Password</label>
          </div>
          <button
            class="btn waves-effect waves-light green lighten-1"
            type="submit"
            name="Register"
          >
            Sign Up
          </button>
          <button
            class="btn waves-effect waves-light green lighten-1"
            type="reset"
            value="Reset"
          >
            Reset Form
          </button>
        </form>
      </div>
    </div>
  </div>
  <%- include('scripts.ejs')-%>
</body>

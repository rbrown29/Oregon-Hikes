<%- include('head.ejs') -%>
<style>
    @import url("https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap");
    body {
      background-color: #3e363f;
      font-family: "Syne Mono", monospace;
    }
    .buttons {
      display: flex;
      justify-content: space-between;
    }
    .input-field input[type="password"]:focus:not([readonly]) {
    border-bottom: 1px solid white !important;
    box-shadow: 0 1px 0 0 white !important;

  }
  input[type="password"]:focus + label , input[type="password"]:focus {
    color: white !important;
  }
  i  {
    color:  black !important;
  }

</style>
<body>
    <div class="container">
      <div class="row">
        <div class="col s12 m6 offset-m3">
          <h1 class="center-align">Reset Password</h1>
          <% if (flashMessages.error && flashMessages.error.length > 0) { %>
            <div class="card-panel red">
              <% flashMessages.error.forEach(function(message) { %>
                <p class="white-text"><%= message %></p>
              <% }); %>
            </div>
          <% } %>
          <% if (flashMessages.success && flashMessages.success.length > 0) { %>
            <div class="card-panel green lighten-1">
              <% flashMessages.success.forEach(function(message) { %>
                <p class="white-text"><%= message %></p>
              <% }); %>
            </div>
          <% } %>
          <form action="/sessions/reset-password" method="POST">
            <div class="input-field">
              <i class="material-icons prefix">password</i>
              <input type="password" name="currentPassword" id="currentPassword" required />
              <label for="currentPassword">Current Password</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">password</i>
              <input type="password" name="newPassword" id="newPassword" required />
              <label for="newPassword">New Password</label>
            </div>
            <div class="input-field">
              <i class="material-icons prefix">password</i>
              <input type="password" name="confirmPassword" id="confirmPassword" required />
              <label for="confirmPassword">Confirm New Password</label>
            </div>
            <div class="buttons">
            <button class="btn waves-effect waves-light black lighten-1" type="submit" name="action">Update Password</button>
            <button class="btn waves-effect waves-light black lighten-1" type="reset">RESET FORM</button>
            <button class="btn waves-effect waves-light black lighten-1" type="button" onclick="window.location.href='/'">CANCEL</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('scripts.ejs') -%>
  </body>
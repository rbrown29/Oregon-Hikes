<%- include('head.ejs')-%>
<%- include('nav.ejs')-%>
<body style="background-color: #3E363F;">
  <div class="container">
    <div class="section">
      <div class="row" id="contain">
        <div class="row s12 m4">
          <div class="card x-large green">
            <div class="card-image green">
              <img src="<%= trail.image %>" style="width: 100%; height: 60%;" />
              <span class="card-title"><%=trail.name%></span>
            </div>
            <div class="card-content green">
              <h5 style="color: white;"><p><%= trail.description %></p></h5>
              <br />
               <!-- Modal Trigger Button -->
               <a class="waves-effect waves-light btn-large modal-trigger green" href="#video-modal"> Play Video</a>
              <%if (trail.difficulty === "Hard"){%>
                <h4 class="red-text"><span style="color: black;">Difficulty <span/><span style="color: red;"><%= trail.difficulty %><h4/>
              <br />
              <%} else if (trail.difficulty === "Moderate") {%>
                <h4 class="yellow-text"><span style="color: black;">Difficulty <span/><span style="color: yellow;"><%= trail.difficulty %><h4/>
              <%} else { %>
                <h4 class="green-text text-darken-4"><span style="color: black;">Difficulty <span/><span style="color: greenyellow;"><%= trail.difficulty %><h4/>
              <%}%>
              <iframe 
                class="alltrails" 
                src="<%= trail.src %>" 
                width="100%" height="400" 
                frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                title="AllTrails: Trail Guides and Maps for Hiking, Camping, and Running">
              </iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Structure -->
  <div id="video-modal" class="modal green">
    <div class="modal-content">
      <h4>Video</h4>
      <iframe 
        width="100%" height="400" 
        src="<%=trail.video%>&amp;start=0" 
        title="YouTube video player" frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen>
      </iframe>
    </div>
    <div class="modal-footer green">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>

  <%- include('scripts.ejs')-%>
</body>

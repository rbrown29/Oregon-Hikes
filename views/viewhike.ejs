<%- include('head.ejs')-%>
<%- include('nav.ejs')-%>
<body style="background-color: #3E363F;">
<div class="container">
    <div class="section">
      <div class="row" id="contain">
        <div class="row s12 m4">
          <div class="card xlarge green">
            <div class="card-image green">
              <img src="<%= trail.image %>" />
              <span class="card-title"><%=trail.name%></span>
            </div>
            <div class="card-content green">
              <h5 style="color: white;"><p><%= trail.description %></p></h5>
              <%if (trail.difficulty === "Hard"){%>
                <h4 class="red-text"><span style="color: black;">Difficulty <span/><span style="color: red;"><%= trail.difficulty %><h4/>
              <br />
              <%} else if (trail.difficulty === "Moderate") {%>
                <h4 class="yellow-text"><span style="color: black;">Difficulty <span/><span style="color: yellow;"><%= trail.difficulty %><h4/>
            <%} else { %>
                        <h4 class="green-text text-darken-4"><span style="color: black;">Difficulty <span/><span style="color: green;"><%= trail.difficulty %><h4/>
             <%}%>      
             
                <iframe 
                class="alltrails" 
                src="<%= trail.src %>" 
                width="100%" height="400" 
                frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                 title="AllTrails: Trail Guides and Maps for Hiking, Camping, and Running">
                </iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('scripts.ejs')-%>
</body>
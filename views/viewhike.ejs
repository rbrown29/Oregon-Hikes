<%- include('head.ejs')-%>
<link
  href="https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap"
  rel="stylesheet"
/>
<style>
  .carousel .carousel-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .carousel.carousel-slider .carousel-item {
    height: 400px;
  }
  .card-content h6 {
    color: white;
    font-family: "Syne Mono", monospace;
  }
  .card-content ul.collection {
    background-color: #28282b;
    border: none;
  }
  .card-content ul.collection .collection-item {
    color: #08ff08;
    font-size: medium;
    background-color: black;
    border: none;
  }
  .modal.green .modal-content h4,
  .modal.green .modal-footer .btn-flat {
    color: white;
  }
  #waypointname {
    color: white;
    font-size: large;
  }
  .card {
    border-radius: 25px;
    overflow: hidden;
    border-color: #28282b;
    box-shadow: 0 0 10px 10px #28282b;
  }
  .card-title {
    font-family: "Syne Mono", monospace;
  }
  #button {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
  }
  .iframe-container {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    box-shadow: 0 0 20px 40px #28282b;
    border-color: #28282b;
    overflow: hidden;
    margin-top: 20px;
    background-color: black;
  }
  .iframe-container iframe {
    width: 100%;
    height: 100%;
    border: none;
    background-color: black;
  }
</style>
<%- include('nav.ejs')-%>
<body style="background-color: black">
  <div class="container" id="container">
    <div class="section" id="section">
      <div class="row" id="contain">
        <div class="row s12 m4">
          <div class="card x-large green" id="card">
            <div class="card-image green">
              <div class="carousel carousel-slider">
                <% trail.image.forEach((img, index) => { %>
                <a class="carousel-item">
                  <img src="<%= img %>" alt="Image <%= index + 1 %>" />
                </a>
                <% }); %>
              </div>
              <span class="card-title"><%=trail.name%></span>
            </div>
            <div class="card-content black">
              <h6 class="white-text text-darken-4">
                <p><%= trail.description %></p>
              </h6>
              <br />
              <!-- Modal Trigger Buttons -->
              <a
                class="waves-effect waves-light btn-small modal-trigger black"
                id="button"
                href="#video-modal"
              >
                Play Video</a
              >
              <a
                class="waves-effect waves-light btn-small modal-trigger black"
                id="button"
                href="<%= trail.info %>"
                target="_blank"
                >More Info</a
              >
              <a
                class="waves-effect waves-light btn-small modal-trigger black"
                id="button"
                href="<%= trail['3dmap'] %>"
                target="_blank"
                >3D Terrain Elevation Map</a
              >
              <a
                class="waves-effect waves-light btn-small modal-trigger black"
                id="button"
                href="<%= trail['google3d'] %>"
                target="_blank"
                >2D and 3D Google Earth</a
              >
              <br />
              <br />

              <div class="iframe-container">
                <iframe
                  src="<%= trail.src %>"
                  title="Trail Map"
                  allowfullscreen
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Structure -->
  <div id="video-modal" class="modal green">
    <div class="modal-content">
      <h4 class="black-text">Video</h4>
      <iframe
        width="100%"
        height="400"
        src="<%=trail.video%>&amp;start=0"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen
      >
      </iframe>
    </div>
    <div class="modal-footer green">
      <a
        href="#!"
        class="modal-close waves-effect waves-green btn-flat black-text"
        >Close</a
      >
    </div>
  </div>
  <%- include('scripts.ejs')-%>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var elems = document.querySelectorAll(".carousel");
      var instances = M.Carousel.init(elems, {
        fullWidth: true,
        indicators: true,
      });
      setInterval(() => {
        instances.forEach((instance) => instance.next());
      }, 2500);

      var modalElems = document.querySelectorAll(".modal");
      M.Modal.init(modalElems);
    });
  </script>
</body>

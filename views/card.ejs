
<div class="container">
  <div class="section">
    <div class="row" id="container">
      <% for (var i = 0; i < trails.length; i++) { %>
      <div class="col s12 m4">
        <div class="card small  black">
          <div class="card-image">
            <img src="<%= trails[i].image %>" />
            <span class="card-title ">
              <ul>
                <li>
                  <a class="tooltipped white-text" data-position="top" data-delay="50" data-tooltip="Click The Name!" href="/viewhike/<%= trails[i].id %>">
                    <%= trails[i].name %>
                  </a>
                </li>
              </ul>
            </span>
          </div>
          <div class="card-content green-text text-accent-4">
            <p>
              <%= trails[i].difficulty %>
            </p>
            <p>
              <%= trails[i].length %> Miles
            </p>
            </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>

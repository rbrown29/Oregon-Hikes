
<div class="container">
  <div class="section">
    <div class="row" id="container">
      <% for (var i = 0; i < trails.length; i++) { %>
      <div class="col s12 m4">
        <div class="card large black lighten-5">
          <div class="card-image black lighten-5">
            <img src="<%= trails[i].image %>" />
            <span class="card-title">
              <ul>
                <li>
                  <a class="tooltipped white-text" data-position="top" data-delay="50" data-tooltip="Click The Name!" href="/viewhike/<%= trails[i].id %>">
                    <%= trails[i].name %>
                  </a>
                </li>
              </ul>
            </span>
          </div>
          <div class="card-content black lighten-5">
            <p style="color: whitesmoke;"><%= trails[i].description %></p>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
